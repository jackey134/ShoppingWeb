@model WebFinalProj.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2 id="title">@ViewBag.Title</h2>
<main aria-labelledby="title">
    <div class="container justify-content-center">
        <!-- 或者使用 "container-fluid" -->
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="row mb-3">
                @Html.LabelFor(m => m.Email, new { @class = "col-lg-2 col-form-label" })
                <div class="col-lg">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "col-lg-2 col-form-label" })
                <div class="col-lg">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="row mb-3">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-lg-2 col-form-label" })
                <div class="col-lg">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="row">
                <div class="offset col-md-10">
                    <input type="submit" value="註冊" class="btn btn-outline-dark" />
                </div>
            </div>
        }
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
