@model IEnumerable<WebFinalProj.Models.Product>

@{
    ViewBag.Title = "Index";
}
<style>
    .card-hover {
        transition: transform 0.5s;
    }

        .card-hover:hover {
            transform: scale(1.03);
        }

    a {
        text-decoration: none;
    }

    .profile-img {
        object-fit: cover;
    }
</style>
<h2>本日新品 / New Arrival</h2>
<hr />

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {

            <div class="col-sm-4">
                <a href="@Url.Action("Details", new { id = item.Id })">
                    <div class="card card-hover mb-3">
                        <img src="@item.ImageURL" class="rounded-2 profile-img img-fluid" />
                        <div class="card-body d-flex flex-column">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="card-title mb-0 text-black" style="width: 70%;">@item.Name</h5>
                                <small class="text-muted" style="width: 30%; text-align: right;">@item.PublishDate.ToString("yyyy/MM/dd HH:mm")</small>
                            </div>
                            <p class="card-text text-black">@Html.Raw(item.Description.Length > 65 ? item.Description.Substring(0, 65) + "..." : item.Description)</p>
                        </div>

                        <div class="card-footer">
                            <div class="d-flex justify-content-between align-items-center" style="margin-left:80px;">
                                <div>
                                    <a href="@Url.Action("Edit", new { id = item.Id })" class="card-link mr-2 btn btn-primary">編輯</a>
                                    <a href="@Url.Action("Delete", new { id = item.Id })" class="card-link btn btn-danger">刪除</a>
                                </div>
                                <div class="d-flex align-items-center ml-auto">
                                    <small class="text-body mr-3" style="margin-right: 10px">Author:</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>
</div>