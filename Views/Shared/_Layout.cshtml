<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - 服飾購物平台</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css")
    
</head>
<body>

    <!--導覽列-->
    <nav class="navbar bg-white navbar-light navbar-expand-lg">
        <div class="container">
            @Html.ActionLink("服飾平台", "Index", "Products", new { area = "" }, new { @class = "navbar-brand fw-bold fs-1" })

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            @Html.ActionLink("衣服List", "Index", "Products", new { area = "" }, new { @class = "navbar-brand" })
            @Html.ActionLink("上傳衣服", "Create", "Products", new { area = "" }, new { @class = "navbar-brand" })
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-lg-auto">
                    <li class="nav-item me-4" style="margin-right: 25px;">
                        <a href="@Url.Action("Login", "Account")" class="nav-link">
                            <!--會員icon-->
                            <i class="fa-regular fa-user fa-xl"></i>
                        </a>
                    </li>
                    <li class="nav-item me-4" style="margin-right: 25px;">
                        <a href="@Url.Action("Index", "Home")" class="nav-link">
                            <!--購物車icon-->
                            <i class="fa-solid fa-cart-shopping fa-xl"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--橫線-->
    <hr class="bg-dark mx-5">
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - 服飾平台</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
